{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,  // Ou false, se você não precisar de arquivos .d.ts
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "vite.config.ts"  // Exclua arquivos de configuração
  ]
}
